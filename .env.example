# =============================================================================
# MINEPLOY CONFIGURATION
# Copy this file to .env and customize the values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Mineploy
DEBUG=false

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=8000
PANEL_PORT=3000

# CORS Origins (comma-separated list)
# Add your domain(s) here for production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# -----------------------------------------------------------------------------
# Database Configuration (MySQL)
# -----------------------------------------------------------------------------
DB_HOST=mysql
DB_PORT=3306
DB_USER=mineploy
DB_PASSWORD=mineploy_secure_password_123
DB_NAME=mineploy

# MySQL root password
MYSQL_ROOT_PASSWORD=root_secure_password_123

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32

# JWT token expiration in hours (default: 168 = 7 days)
JWT_EXPIRATION_HOURS=168

# -----------------------------------------------------------------------------
# Minecraft Server Settings
# -----------------------------------------------------------------------------
# Maximum number of servers allowed
MAX_SERVERS=10

# Port ranges for Minecraft servers
SERVER_PORT_RANGE_START=25565
SERVER_PORT_RANGE_END=25664

# Port ranges for RCON
RCON_PORT_RANGE_START=35565
RCON_PORT_RANGE_END=35664

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
# Days to keep backups before auto-deletion
BACKUP_RETENTION_DAYS=30

# Maximum total backup size in GB
BACKUP_MAX_SIZE_GB=50

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# API URL for frontend (adjust for your domain)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
